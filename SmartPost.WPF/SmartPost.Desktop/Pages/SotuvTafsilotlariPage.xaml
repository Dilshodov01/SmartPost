                            FontSize="16"
                            Content="Soni:"/>

                        <Border
                            Margin="10 15 0 0"
                            Width="100"
                            Height="30"
                            CornerRadius="3"
                            VerticalAlignment="Bottom"
                            BorderBrush="Black"
                            BorderThickness="0.5">

                            <TextBox
                                MaxLength="3"
                                FontSize="16"
                                Margin="7 5"
                                Background="Transparent"
                                BorderThickness="0"/>

                        </Border>

                    </StackPanel>

                    <Grid
                        Margin="10 10 20 0"
                        Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
