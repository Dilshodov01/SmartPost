                Style="{DynamicResource TabItemStyle}"
                Header="Sotilganlar">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel
                        Orientation="Horizontal"
                        Grid.Row="0">

                        <DatePicker
                            Name="dan_datePicker_sale"
                            Margin="10 20 0 0"
                            Width="200"
                            Style="{DynamicResource FormDatePicker}"/>

                        <Label
                            FontSize="16"
                            Margin="5 18 0 0"
                            Content="dan:"/>

                        <DatePicker
                            Name="gacha_datePicker_sale"
                            Margin="50 20 0 0"
                            Width="200"
                            Style="{DynamicResource FormDatePicker}"/>

                        <Label
                            FontSize="16"
                            Margin="5 18 0 0"
                            Content="gacha"/>


                    </StackPanel>

                    <Grid
                        Margin="10 10 20 0"
                        Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>

                        <Label 
                            Grid.Column="0"
                            Content="No."
                            Margin="5 0 0 0"
                            Style="{DynamicResource TitleLabel}"/>
                        <Label 
                            Grid.Column="1"
                            Margin="10 0 0 0"
                            Content="Hamkor ismi"
                            Style="{DynamicResource TitleLabel}"/>
                        <Label 
                            Grid.Column="2"
                            Content="Nomi"
                            Margin="10 0 0 0"
                            Style="{DynamicResource TitleLabel}"/>
                        <Label 
                            Grid.Column="3"
                            Content="Brendi"
                            Margin="10 0 0 0"
                            Style="{DynamicResource TitleLabel}"/>
                        <Label 
                            Grid.Column="4"
                            Content="Narxi"
                            Margin="10 0 0 0"
                            Style="{DynamicResource TitleLabel}"/>
                        <Label 
                            Grid.Column="5"
                            Content="Soni"
                            Style="{DynamicResource TitleLabel}"/>
                        <Label 
                            Grid.Column="6"
                            Content="Jami summasi"
                            Style="{DynamicResource TitleLabel}"/>

                    </Grid>

                    <Grid
                        Grid.Row="2">
                        <ScrollViewer>
                            <WrapPanel
                                x:Name="wrpOmborxona">

                            </WrapPanel>
                        </ScrollViewer>
                        <Label 
                            x:Name="emptyDataProducts"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Visibility="Collapsed"
                            Content="Xozircha malumotlar yo'q"
                            FontSize="18">
                        </Label>
                    </Grid>
                </Grid>

            </TabItem>

