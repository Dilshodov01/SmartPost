                            Style="{DynamicResource TitleLabel}"/>
                        <Label 
                            Grid.Column="5"
                            Content="Soni"
                            Style="{DynamicResource TitleLabel}"/>
                        <Label 
                            Grid.Column="6"
                            Content="Jami summasi"
                            Style="{DynamicResource TitleLabel}"/>

                    </Grid>

                    <Grid
                        Margin="10 0"
                        Grid.Row="2">
                        <ScrollViewer>
                            <StackPanel
                                x:Name="wrpTopSale">

                            </StackPanel>
                        </ScrollViewer>
                        <Label 
                            x:Name="emptyDataBrand"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Visibility="Collapsed"
                            Content="Xozircha malumotlar yo'q"
                            FontSize="18">
                        </Label>
                    </Grid>

                </Grid>

            </TabItem>

