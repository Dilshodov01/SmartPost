<Page x:Class="SmartPost.Desktop.Pages.OmborxonaPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="500"
      Title="OmborxonaPage">

    <Grid
        Margin="10">

        <TabControl
            Background="Transparent"
            BorderThickness="0">
            
            <TabItem
                Style="{DynamicResource TabItemStyle}"
                Header="Barcha maxsulotlar">

                <Grid
                    >
                    <ScrollViewer>
                        <WrapPanel 
                            x:Name="wrpOmborxona">

                        </WrapPanel>
                    </ScrollViewer>
                    <Label 
                        x:Name="emptyDataProducts"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Visibility="Collapsed"
                        Content="Xozircha malumotlar yo'q"
                        FontSize="18">
                    </Label>
                </Grid>
                
            </TabItem>

            <TabItem
                Style="{DynamicResource TabItemStyle}"
                Header="Brendlar">

                <Grid
                    >
                    <ScrollViewer>
                        <WrapPanel 
                            x:Name="wrpBrand">

                        </WrapPanel>
                    </ScrollViewer>
                    <Label 
                        x:Name="emptyDataBrand"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Visibility="Collapsed"
                        Content="Xozircha malumotlar yo'q"
                        FontSize="18">
                    </Label>
                </Grid>

            </TabItem>

            <TabItem
                Style="{DynamicResource TabItemStyle}"
                Header="Kategoriyalar">

                <Grid
                    >
                    <ScrollViewer>
                        <WrapPanel 
                            x:Name="wrpCategory">

                        </WrapPanel>
                    </ScrollViewer>
                    <Label 
                        x:Name="emptyDataCategory"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Visibility="Collapsed"
                        Content="Xozircha malumotlar yo'q"
                        FontSize="18">
                    </Label>
                </Grid>

            </TabItem>
            
        </TabControl>
        
    </Grid>
</Page>
